<div class='mt-4'>
  <div class='row'>

    {{#each course}}
      <div class='col-sm-6 col-lg-4'>
        <div
          class='card card-course-item'
          style='width: 18rem'
        >
          <img
            src='{{this.image}}'
            class='card-img-top'
            alt='...'
          />
          <div class='card-body'>
            <h5 class='card-title'>{{this.name}}</h5>
            <p
              class='card-text card-course-description'
            >{{this.description}}</p>
            <a href='#' class='btn btn-primary'>Register
              Course</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>